@page
@model ReiniciarModel
@{
    ViewBag.Footer = false;
    ViewData["Title"] = "Reiniciar";
}

<div class="d-flex justify-content-center mt-5 mb-5">
    <div class="csr-div-login csr-div-ingresar rounded-3">
        <div class="text-center mt-3">
            <h3>Cambiar contraseña</h3>
        </div>
        <div class="text-center mt-3"><img src="../../assets/img/profile.png" class="csr-img-perfil"></div>
        <form method="post">
            <div class="mt-5 text-center">
                <p>Para ingresar debes configurar una nueva contraseña</p>
            </div>
            <div class="input-group mt-3">
                <span class="input-group-text">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="1em" height="1em" fill="currentColor">
                        <!--! Font Awesome Free 6.1.1 by fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free (Icons: CC BY 4.0, Fonts: SIL OFL 1.1, Code: MIT License) Copyright 2022 Fonticons, Inc. -->
                        <path d="M282.3 343.7L248.1 376.1C244.5 381.5 238.4 384 232 384H192V424C192 437.3 181.3 448 168 448H128V488C128 501.3 117.3 512 104 512H24C10.75 512 0 501.3 0 488V408C0 401.6 2.529 395.5 7.029 391L168.3 229.7C162.9 212.8 160 194.7 160 176C160 78.8 238.8 0 336 0C433.2 0 512 78.8 512 176C512 273.2 433.2 352 336 352C317.3 352 299.2 349.1 282.3 343.7zM376 176C398.1 176 416 158.1 416 136C416 113.9 398.1 96 376 96C353.9 96 336 113.9 336 136C336 158.1 353.9 176 376 176z"></path>
                    </svg>
                </span>
                <input asp-for="@Model.Input.NewPassword" class="form-control form-control-lg" type="password" placeholder="Contraseña">
            </div>
            <span asp-validation-for="@Model.Input.NewPassword" class="text-danger"></span>
            <div class="input-group mt-3">
                <span class="input-group-text">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="1em" height="1em" fill="currentColor">
                        <!--! Font Awesome Free 6.1.1 by fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free (Icons: CC BY 4.0, Fonts: SIL OFL 1.1, Code: MIT License) Copyright 2022 Fonticons, Inc. -->
                        <path d="M282.3 343.7L248.1 376.1C244.5 381.5 238.4 384 232 384H192V424C192 437.3 181.3 448 168 448H128V488C128 501.3 117.3 512 104 512H24C10.75 512 0 501.3 0 488V408C0 401.6 2.529 395.5 7.029 391L168.3 229.7C162.9 212.8 160 194.7 160 176C160 78.8 238.8 0 336 0C433.2 0 512 78.8 512 176C512 273.2 433.2 352 336 352C317.3 352 299.2 349.1 282.3 343.7zM376 176C398.1 176 416 158.1 416 136C416 113.9 398.1 96 376 96C353.9 96 336 113.9 336 136C336 158.1 353.9 176 376 176z"></path>
                    </svg>
                </span>
                <input asp-for="@Model.Input.ConfirmNewPassword" class="form-control form-control-lg" type="password" placeholder="Repetir contraseña">
            </div>
            <span asp-validation-for="@Model.Input.ConfirmNewPassword" class="text-danger"></span>
            <div class="mt-3 d-grid"><button class="btn btn-warning btn-lg" type="submit">Confirmar</button></div>
            <span class="text-danger">@Model.Message</span>
        </form>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}