@page
@using Web.Utilities
@model Web.Pages.MiCuenta.LotesModel
@{
    ViewData["Title"] = "Lotes";
}

<section class="csr-section-lotes">
    <div class="container">
        <h5>Mis lotes</h5>
        <div class="table-responsive">
            <table class="table">
                <thead class="text-white csr-table-header">
                    <tr>
                        <th>#</th>
                        <th>Lote</th>
                        <th>Saldo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @for (int i = 0; i < Model.Contracts.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model.Contracts[i].Property.Code</td>
                            <td>@Model.Contracts[i].BalancePayable.ToCurrency()</td>
                            <td>
                                <a class="btn btn-warning" asp-page="/MiCuenta/Lotes/DetalleLote" asp-route-id="@Model.Contracts[i].ContractId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" class="fs-4">
                                        <path d="M7 18H17V16H7V18Z" fill="currentColor"></path>
                                        <path d="M17 14H7V12H17V14Z" fill="currentColor"></path>
                                        <path d="M7 10H11V8H7V10Z" fill="currentColor"></path>
                                        <path fill-rule="evenodd" clip-rule="evenodd" d="M6 2C4.34315 2 3 3.34315 3 5V19C3 20.6569 4.34315 22 6 22H18C19.6569 22 21 20.6569 21 19V9C21 5.13401 17.866 2 14 2H6ZM6 4H13V9H19V19C19 19.5523 18.5523 20 18 20H6C5.44772 20 5 19.5523 5 19V5C5 4.44772 5.44772 4 6 4ZM15 4.10002C16.6113 4.4271 17.9413 5.52906 18.584 7H15V4.10002Z" fill="currentColor"></path>
                                    </svg>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>