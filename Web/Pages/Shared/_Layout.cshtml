@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Web
<!DOCTYPE html>
<html lang="es-mx">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewData["Title"] - Condado Santa Rita</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins&amp;display=swap">
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/Styles.css" asp-append-version="true" />
</head>
<body class="body">
    <header class="csr-navbar-color">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-md">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-page="/Index"><img class="csr-brand" src="assets/img/Logo.png"></a><button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse justify-content-end" id="navcol-1">
                        <ul class="navbar-nav">
                            <li class="nav-item"><a class="nav-link active" asp-page="/Index">Inicio</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Productos</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Acerca de</a></li>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item"><a class="btn btn-warning nav-link" role="button" asp-page="/Ingresar">Ingresar</a></li>
                            }
                            else
                            {
                                <li class="nav-item dropdown">
                                    <a class="dropdown-toggle nav-link" aria-expanded="false" data-bs-toggle="dropdown" href="#">Cuenta</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-page="/MiCuenta/Perfil">Perfil</a>
                                        <a class="dropdown-item" asp-page="/MiCuenta/Lotes">Lotes</a>
                                        <a class="dropdown-item" asp-page="/MiCuenta/Salir">Cerrar sesión</a>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    @if (ViewBag.Footer)
    {

    }

    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>