@page
@model Web.Pages.IngresarModel
@using Web.Pages.Shared
@{
    ViewBag.Footer = false;
    ViewData["Title"] = "Ingresar";
}

<section>
    <section class="position-relative py-4 py-xl-5">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-8 col-xl-6 text-center mx-auto">
                    <h2>Iniciar sesión</h2>
                    <p class="w-lg-50">Lorem ipsum dolor sit amet consectetur adipiscing elit, parturient feugiat tellus hac turpis risus, blandit nunc cursus mi neque sociosqu.</p>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 col-xl-4">
                    <div class="card mb-5">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="bs-icon-xl bs-icon-circle bs-icon-primary bs-icon my-4">
                                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"></path>
                                </svg>
                            </div>
                            <form class="text-center" method="post">
                                <div class="mb-3">
                                    <input asp-for="@Model.Input.Username" class="form-control" placeholder="Correo">
                                    <span asp-validation-for="@Model.Input.Username" class="text-danger csr-validation-message"></span>
                                </div>

                                <div class="mb-3">
                                    <input asp-for="@Model.Input.Password" class="form-control" placeholder="Contraseña">
                                    <span asp-validation-for="@Model.Input.Password" class="text-danger csr-validation-message"></span>
                                </div>
                                <div class="mb-3">
                                    <button class="btn btn-warning d-block w-100" type="submit">Ingresar</button>
                                    <span class="text-danger csr-validation-message">@Model.Message</span>
                                </div>
                                <p class="text-muted">¿Olvidaste tu contraseña?</p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>

@section scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}